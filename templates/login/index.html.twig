{% extends 'base.html.twig' %}


{% block body %}
<div class="container">
    <div class="row d-flex justify-content-center align-items-center h-100 mt-2">
        <div class="col-12 col-md-9 col-lg-7 col-xl-6">
          <div class="card" style="border-radius: 15px;">
            <div class="card-body p-5">
              <h2 class="text-uppercase text-center mb-5">Zaloguj się</h2>
              
              <form>
                <div class="form-outline mb-4">
                  <input type="text" id="inputLogin" class="form-control form-control-lg" />
                  <label class="form-label" for="inputLogin">Nazwa użytkownika/E-mail</label>
                </div>

                <div class="form-outline mb-4">
                  <input type="password" id="inputPassword" class="form-control form-control-lg" />
                  <label class="form-label" for="inputPassword">Hasło</label>
                </div>
                <div class="d-flex justify-content-center">
                  <button class="btn btn-lg btn-success">Zaloguj się</button>
                </div>
                <a href="#">Zapomniałem hasła</a>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
</div>
{% endblock %}
